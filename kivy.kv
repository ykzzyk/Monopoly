#: import NoTransition kivy.uix.screenmanager.NoTransition

WindowManager:
    Game:
    Logo:
    Home:
    Feedback:
    Lobby:


<Logo>:
    name: "logo"

    GridLayout:
        rows: 2

        Image:
            source: 'monopoly_logo.png'
            size: self.texture_size
            size_hint_y: 4

        Button:
            text: "[b]Start Game[/b]"
            background_color: (1.0, 0.0, 0.0, 1.0)
            markup: True
            font_size: self.width / 20
            on_press:
                app.root.transition = NoTransition()
            on_release:
                app.root.current = "home"

<Feedback>:
    name: "feedback"

    GridLayout:
        rows: 3
        padding: [self.width // 7, self.width // 50, self.width // 7, self.width // 50]

        Label:
            text: '[b][color=#FF7F00]Help & Feedback[/color][/b]'
            font_size: self.width // 15
            color: [1, 1, 1, 1]
            markup: True
            size_hint_y: 1

        Label:
            text: '[b][color=#FF7F00]text[/color][/b]'
            markup: True
            size_hint_y: 4

        GridLayout:
            cols: 2
            spacing: [self.width // 15, 0]

            Button:
                text: "[b]Back[/b]"
                background_color: (1.0, 0.0, 0.0, 1.0)
                markup: True
                font_size: self.width // 15
                on_release:
                    app.root.current = "home"


            Button:
                text: "[b]Contact us[/b]"
                background_color: (1.0, 0.0, 0.0, 1.0)
                markup: True
                font_size: self.width // 15
                on_release:
                    root.send_email(None)


<Home>:
    name: "home"

    GridLayout:
        rows: 2
        spacing: [0, self.width // 20]
        padding: [self.width // 4, self.width // 28, self.width // 4, self.width // 57]


        Label:
            markup: True
            text: '[b][color=#FF7F00]Monopoly[/color][/b]'
            font_size: self.width // 4
            size_hint_y: 0.3

        GridLayout:
            rows: 5
            size_hint_y: 1.8
            spacing: [0, self.width // 40]
            Button:
                text: "[b]Play Local[/b]"
                background_color: (1.0, 0.0, 0.0, 1.0)
                markup: True
                font_size: self.width // 20
                on_release:
                    app.root.current = "lobby"

            Button:
                text: "[b]Play LAN[/b]"
                background_color: (1.0, 0.0, 0.0, 1.0)
                markup: True
                font_size: self.width // 20
                on_release:
                    app.root.current = "lobby"
            Button:
                text: "[b]Play Online[/b]"
                background_color: (1.0, 0.0, 0.0, 1.0)
                markup: True
                font_size: self.width // 20
                on_release:
                    app.root.current = "lobby"
            Button:
                text: "[b]Help & Feedback[/b]"
                background_color: (1.0, 0.0, 0.0, 1.0)
                markup: True
                font_size: self.width // 20
                on_release:
                    app.root.current = "feedback"
            Button:
                text: "[b]Exit[/b]"
                background_color: (1.0, 0.0, 0.0, 1.0)
                markup: True
                font_size: self.width // 20
                on_release:
                    app.get_running_app().stop()


<Lobby>:
    name: "lobby"

    GridLayout:
        rows: 3
        spacing: [0, self.width // 20]

        Label:
            markup: True
            text: '[b][color=#FF7F00]Game Lobby[/color][/b]'
            font_size: self.width // 16
            color: [1, 1, 1, 1]
            size_hint_y: 0.5


        Button:
            text: "[b]Players[/b]"
            markup: True
            size_hint_y: 2



        GridLayout:
            cols: 2
            size_hint_y: 0.5
            spacing: [self.width // 20, 0]
            #padding: [self.width // 25, 0, self.width // 25, self.width // 50]

            Button:
                text: "[b]Quit[/b]"
                markup: True
                on_release:
                    app.root.current = "home"
            Button:
                text: "[b]Join Game[/b]"
                markup: True
                on_release:
                    app.root.current = "game"

<Game>:
    name: "game"

    GridLayout:
        cols: 2
        Widget:
            canvas:
                Rectangle:
                    source: 'monopoly_background.jpg'
                    size: self.height, self.height

        GridLayout:
            rows: 2
            size_hint_x: self.width/self.height
            Button:
                text: '[b][color=#FFB533]Players Information[/color][/b]'
                font_size: self.width // 55
                color: [1, 1, 1, 1]
                markup: True

            Button:
                text: '[b][color=#FFB533]History[/color][/b]'
                font_size: self.width // 55
                color: [1, 1, 1, 1]
                markup: True




