<LoserPop@Popup>
    size_hint: (None, None)
    size: (Window.width//2, Window.height//2)
    title: ""
    separator_height: 0
    background: "assets/background/card.jpg"
    auto_dismiss: False

    GridLayout:
        rows: 2

        GridLayout:
            cols: 2
            size_hint_y: 0.8
            Image:
                source: 'assets/background/bankrupt.png'

            GridLayout:
                rows: 2
                Image:
                    id: loser_icon
                    source: ''
                Label:
                    id: loser_info
                    text: ''
                    markup: True


        GridLayout:
            cols: 1
            size_hint_y: 0.2
            padding: [root.width//15, 0, root.width//15, root.width//30]

            Button:
                id: button_accept
                text: '[b][color=#ffffff]GOOD GAME[/b][/color]'
                font_size: root.width // 42
                background_normal: 'assets/buttons/red.png'
                markup: True
                canvas.before:
                    Color:
                        rgba: .1, .1, .1, 1
                    Line:
                        width: 5
                        rectangle: self.x, self.y, self.width, self.height
                on_release:
                    root.dismiss()
