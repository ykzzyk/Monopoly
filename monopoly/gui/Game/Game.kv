#:import Window kivy.core.window.Window

<Game>:
    name: "game"

    GridLayout:
        id: game_grid0
        cols: 2

        GameBoard:
            id: game_board

        GridLayout:
            id: right_side_panel
            rows: 2
            size_hint_x: (Window.width - Window.height)/Window.height

            TabbedPanel:
                id: top_right_panel
                tab_width: self.size[0]/len(self.tab_list)
                border: [0,0,0,0]
                default_tab: players
                
                TabbedPanelItem:
                    id: players
                    text: 'Players'
                    PlayersInfo:
                        id: player_info

                TabbedPanelItem:
                    id: instructions
                    text: 'Instructions'
                    
                    GameInstruction:
                        id: game_instruction

            HistoryLog:
                id: history_log