#:import Window kivy.core.window.Window
<TabbedPanelHeader>:
    background_normal: 'assets/buttons/deep_grey.jpg'
    background_down: 'assets/buttons/light_grey.jpg'

<Game>:
    name: "game"

    GridLayout:
        id: game_grid0
        cols: 2

        GameBoard:
            id: game_board

        GridLayout:
            id: right_side_panel
            rows: 3
            size_hint_x: (Window.width - Window.height)/Window.height

            TabbedPanel:
                id: top_right_panel
                tab_width: self.width/len(self.tab_list)
                border: [0,0,0,0]
                background_color: [0,0,0,0]
                strip_image: 'assets/buttons/deep_grey.jpg'

                default_tab: players
                
                TabbedPanelItem:
                    id: players
                    text: '[b][color=#ffffff]PLAYERS[/b][/color]'
                    font_size: self.width//20
                    markup: True
                    background_normal: 'assets/buttons/light_grey.jpg'
                    background_down: 'assets/buttons/red.png'
                    outline_color: 0,0,0,1
                    outline_width: 1
                    InfoFrame:
                        id: info_frame

                TabbedPanelItem:
                    id: instructions
                    text: '[b][color=#ffffff]INSTRUCTIONS[/b][/color]'
                    font_size: self.width//20
                    background_normal: 'assets/buttons/light_grey.jpg'
                    background_down: 'assets/buttons/red.png'
                    outline_color: 0,0,0,1
                    outline_width: 1
                    markup: True
                    GameInstruction:
                        id: game_instruction

            Button:
                id: history_log_title
                size_hint_y: 0.15
                text: '[b][color=#ffffff]HISTORY LOG[/b][/color]'
                font_size: self.width//20
                markup: True
                color: [1,0,0,1]
                outline_color: 0,0,0,1
                outline_width: 1
                disabled: True
                background_disabled_normal: "assets/buttons/red.png"
                canvas.after:
                    Color:
                        rgba: .1, .1, .1, 1
                    Line:
                        width: 1.3
                        rectangle: 1.001*self.x, self.y, 0.999*self.width, self.height


            ScrollView:
                do_scroll_y: True
                do_scroll_x: True
                
                HistoryLog:
                    id: history_log
                    size_hint: None, None
                    size: self.texture_size
                    font_size: '18sp'
                    valign: 'bottom'
                    halign: 'left'