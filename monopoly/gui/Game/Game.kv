#:import Window kivy.core.window.Window

<Game>:
    name: "game"

    GridLayout:
        id: game_grid0
        cols: 2

        GameBoard:
            id: game_board

        GridLayout:
            rows: 2
            size_hint_x: (Window.width - Window.height)/Window.height
            padding: [self.width // 20, self.width // 50, self.width // 20, self.width // 50]
            spacing: [0, self.width // 50]

            GridLayout:
                cols: 2
                spacing: [self.width // 50, 0]
                Button:
                    text: '[b][color=#FFB533]Players Information[/color][/b]'
                    font_size: self.width // 55
                    color: [1, 1, 1, 1]
                    markup: True
                GameInstruction:

            HistoryLog: