#:import Window kivy.core.window.Window

<GameBoard@GridLayout>:
    Widget:
        canvas.before:
            Rectangle:
                source: 'assets/clean_monopoly_classic_board.jpg'
                size: Window.height, Window.height
            Rectangle:
                source: 'assets/cat.png'
                size: (Window.height//15, Window.height//15)
                pos: (100, 100)

            Rectangle:
                source: 'assets/dog.png'
                size: (Window.height//15, Window.height//15)
                pos: (200, 200)

            Rectangle:
                source: 'assets/flight.png'
                size: (Window.height//15, Window.height//15)
                pos: (300, 300)

            Rectangle:
                source: 'assets/ship.png'
                size: (Window.height//15, Window.height//15)
                pos: (400, 400)

            Rectangle:
                source: 'assets/hat.png'
                size: (Window.height//15, Window.height//15)
                pos: (500, 500)

            Rectangle:
                source: 'assets/duck.png'
                size: (Window.height//15, Window.height//15)
                pos: (600, 600)

            Rectangle:
                id: 'boot'
                source: 'assets/boot.png'
                size: (Window.height//15, Window.height//15)
                pos: (700, 700)

            Rectangle:
                source: 'assets/squirrel.png'
                size: (Window.height//15, Window.height//15)
                pos: (800, 800)

        Button:
            text: '[b][color=#FFB533]btn1[/color][/b]'
            #background_normal: 'assets/boot.png'
            #background_down: 'assets/duck.png'
            size: (Window.width//10, Window.width//20)
            font_size: Window.width // 50
            color: [1, 1, 1, 1]
            markup: True
            pos: (Window.width//8, Window.height//1.8)

        Button:
            text: '[b][color=#FFB533]btn2[/color][/b]'
            #background_normal: 'assets/boot.png'
            #background_down: 'assets/duck.png'
            size: (Window.width//10, Window.width//20)
            font_size: Window.width // 50
            color: [1, 1, 1, 1]
            markup: True
            pos: (Window.width//3.8, Window.height//1.8)

        Button:
            text: '[b][color=#FFB533]btn3[/color][/b]'
            #background_normal: 'assets/boot.png'
            #background_down: 'assets/duck.png'
            size: (Window.width//10, Window.width//20)
            font_size: Window.width // 50
            color: [1, 1, 1, 1]
            markup: True
            pos: (Window.width//2.5, Window.height//1.8)
