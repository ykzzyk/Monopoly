#:import Window kivy.core.window.Window

<GameMap@Label>:
    canvas:
        Rectangle:
            source: 'assets/clean_monopoly_classic_board.jpg'
            size: Window.height, Window.height


<GameBoard@Widget>:
    Button:
        text: '[b][color=#808080]Build/Sell[/color][/b]'
        background_normal: 'assets/light_yellow.png'
        canvas.before:
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: Window.width//500
                rectangle: self.x, self.y, self.width, self.height
        size: (Window.width//10, Window.width//25)
        font_size: Window.width // 60
        color: [1, 1, 1, 1]
        markup: True
        pos: (root.width//6, root.height//1.7)
    Button:
        text: '[b][color=#808080]Trade[/color][/b]'
        background_normal: 'assets/tea_green.png'
        canvas.before:
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: Window.width//500
                rectangle: self.x, self.y, self.width, self.height

        #background_down: 'assets/duck.png'
        size: (Window.width//10, Window.width//25)
        font_size: Window.width // 60
        color: [1, 1, 1, 1]
        markup: True
        pos: (root.width//2.4, root.height//1.7)
    Button:
        text: '[b][color=#808080]Mortgage/\nRegain[/color][/b]'
        background_normal: 'assets/pale_goldenrod.png'
        canvas.before:
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: Window.width//500
                rectangle: self.x, self.y, self.width, self.height
        #background_down: 'assets/duck.png'
        size: (Window.width//10, Window.width//25)
        font_size: Window.width // 60
        color: [1, 1, 1, 1]
        markup: True
        pos: (root.width//1.5, root.height//1.7)
        on_release:
            root.cardInfoPopup()


    Button:
        text: '[b][color=#808080]Roll Dice[/color][/b]'
        background_normal: 'assets/light_red.png'
        canvas.before:
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: Window.width//500
                rectangle: self.x, self.y, self.width, self.height
        #background_down: 'assets/duck.png'
        size: (Window.width//10, Window.width//25)
        font_size: Window.width // 60
        color: [1, 1, 1, 1]
        markup: True
        pos: (root.width//1.85, root.height//1.4)
        on_release:
            root.roll_dice(None)

    Label:
        id: dice_1
        text: '[b][color=#000000]\u2680[/color][/b]'
        markup: True
        font_size: root.width//13
        font_name: "assets/DejaVuSans.ttf"
        pos: (root.width//2.9, root.height/1.4)

    Label:
        id: dice_2
        text: '[b][color=#000000]\u2681[/color][/b]'
        markup: True
        font_size: root.width//13
        font_name: "assets/DejaVuSans.ttf"
        pos: (root.width//2.35, root.height/1.4)

    Label:
        source: 'assets/cat.png'
        size: (Window.height//15, Window.height//15)
        pos: (100, 500)

<CardInfoPop@Popup>:
    size_hint: (None, None)
    size: (Window.height//1.5, Window.height//2)
    title: ""
    separator_height: 0
    background: "assets/card.jpg"
    auto_dismiss: False

    GridLayout:

        cols: 2

        GridLayout:

            rows: 2

            size_hint_x: 1.5

            Image:
                id: card_image

            Label:
                id: card_info
                markup: True
                font_size: root.height//23

        Image:
            source: "assets/master.png"

