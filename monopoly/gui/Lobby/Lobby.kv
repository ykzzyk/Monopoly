<Lobby>:
    id: lobby
    name: "lobby"

    GridLayout:
        id: lobby_grid0
        name: 'lobby_grid0'
        
        rows: 3
        spacing: [0, self.width // 20]

        Label:
            id: lobby_title
            name: 'lobby_title'
            
            markup: True
            text: '[b][color=#FF7F00]Game Lobby[/color][/b]'
            font_size: self.width // 16
            color: [1, 1, 1, 1]
            size_hint_y: 0.2


        LobbyInterGrid:
            id: lobby_inter_grid
            name: 'lobby_inter_grid'

        LobbyOptions:
            id: lobby_options
            name: 'lobby_options'