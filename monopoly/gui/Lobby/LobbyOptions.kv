#: import Window kivy.core.window.Window

<LobbyOptions@GridLayout>

    cols: 3
    size_hint_y: 0.2
    spacing: [self.width // 20, 0]
    #padding: [self.width // 25, 0, self.width // 25, self.width // 50]

    Button:
        text: "[b]Quit[/b]"
        markup: True
        on_release:
            app.root.current = "home"

    Button:
        text: "[b]Add Player[/b]"
        markup: True
        #on_release:
            #function here

    Button:
        text: "[b]Join Game[/b]"
        markup: True
        on_release:
            app.root.current = "game"