#:import Window kivy.core.window.Window

<PlayerBox@BoxLayout>:
    orientation:'vertical'

    GridLayout:
        cols: 2

        Label:
            text: '[b][color=#FF7F00]Players[/color][/b]'
            font_size: (Window.width**2 + Window.height**2) / 18**4
            markup: True
            text_size: self.size
            halign: 'left'
            valign: 'middle'

        Label:
            text: '[b][color=#FF7F00]Ready[/color][/b]'
            font_size: (Window.width**2 + Window.height**2) / 18**4
            markup: True
            size_hint_x: 0.2

    PlayerEntry:

    PlayerEntry:

    PlayerEntry:

    PlayerEntry:

    PlayerEntry:

    PlayerEntry:

    PlayerEntry:

    PlayerEntry:
