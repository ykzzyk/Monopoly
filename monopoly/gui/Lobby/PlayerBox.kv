#:import Window kivy.core.window.Window

<PlayerBox@BoxLayout>:
    id: player_box
    name: 'player_box'
    
    orientation:'vertical'

    GridLayout:
        cols: 2

        Label:
            text: '[b][color=#FF7F00]Players[/color][/b]'
            font_size: (Window.width**2 + Window.height**2) / 18**4
            markup: True
            text_size: self.size
            halign: 'left'
            valign: 'middle'

        Label:
            text: '[b][color=#FF7F00]Ready[/color][/b]'
            font_size: (Window.width**2 + Window.height**2) / 18**4
            markup: True
            size_hint_x: 0.2

    PlayerEntry:
        id: player1
        name: 'player1'

    PlayerEntry:
        id: player2
        name: 'player2'

    PlayerEntry:
        id: player3
        name: 'player3'

    PlayerEntry:
        id: player4
        name: 'player4'

    PlayerEntry:
        id: player5
        name: 'player5'

    PlayerEntry:
        id: player6
        name: 'player6'

    PlayerEntry:
        id: player7
        name: 'player7'

    PlayerEntry:
        id: player8
        name: 'player8'
