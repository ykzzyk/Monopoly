#:import Window kivy.core.window.Window

<PlayerInfo@GridLayout>:
    cols: 2

    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgb: [0.3, 0.3, 0.3]
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: root.random_text
            font_size: (Window.width**2 + Window.height**2) / 22**4
            halign: 'left'
            valign: 'middle'
            text_size: self.size

        Label:
            text: '[b][color=#FF7F00]<IP Address>[/color][/b]'
            font_size: (Window.width**2 + Window.height**2) / 22**4
            markup: True
            halign: 'left'
            valign: 'middle'
            text_size: self.size

    PlayerIcon

        