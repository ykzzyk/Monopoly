#:import Window kivy.core.window.Window

<GameInfoBox@BoxLayout>:    
    orientation: 'vertical'
    
    Label:
        id: game_info_title
        name: 'game_info_title'

        markup: True
        text: '[b][color=#FF0000]GAME INFORMATION[/color][/b]'
        font_size: (Window.width**2 + Window.height**2) / 18**4
        outline_color: 0,0,0,1
        outline_width: '1sp'
        size_hint_y: 0.25

    Label:
        id: game_info
        name: 'game_info'

        markup: True
        text: '[b][color=#FF0000]HOST:[/color][/b]'
        outline_color: 0,0,0,1
        outline_width: '0.5sp'
        font_size: (Window.width**2 + Window.height**2) / 22**4
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        canvas.before:
            Color:
                rgb: [0,0,0]
            Line:
                width: 1.1
                rectangle: self.x, self.y, self.width, self.height

    Label:
        id: log_info
        name: 'log_info'
        outline_color: 0,0,0,1
        outline_width: '0.5sp'
        markup: True
        text: '[b][color=#FF0000]LOG: [/color][/b]'
        font_size: (Window.width**2 + Window.height**2) / 22**4
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        canvas.before:
            Color:
                rgb: [0,0,0]
            Line:
                width: 1.1
                rectangle: self.x, self.y, self.width, self.height