#:import Window kivy.core.window.Window

<PlayerEntry@GridLayout>:
    
    cols: 2
    canvas.before:
        Color:
            rgb: [0,0,0]
        Line:
            width: 1.1
            rectangle: self.x, self.y, self.width, self.height

    GridLayout:
        cols: 2

        Label:
            id: player_text
            name: 'player_text'

            size_hint_x: 0.9
            font_size: root.height//3
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            
            text: '[b][color=#FF7F00]<Player Name>\n<IP Address>[/color][/b]'
            markup: True

        PlayerIcon:
            id: player_icon
            name: 'player_icon'

            size_hint: None, None
            size: (root.height, root.height)

    Button:
        id: ready_button
        name: 'ready_button'

        size_hint_x: 0.2
        canvas:
            Color:
                rgb: [0.3,0.3,0.3]
            Rectangle:
                pos: self.pos
                size: self.size

        