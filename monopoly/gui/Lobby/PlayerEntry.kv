#:import Window kivy.core.window.Window

<PlayerEntry@GridLayout>:
    
    cols: 2
    canvas.before:
        Color:
            rgb: [0,0,0]
        Line:
            width: 1.1
            rectangle: self.x, self.y, self.width, self.height

    PlayerInfo:
        id: player_info
        name: 'player_info'

    Button:
        id: ready_button
        name: 'ready_button'

        size_hint_x: 0.2
        canvas:
            Color:
                rgb: [0.3,0.3,0.3]
            Rectangle:
                pos: self.pos
                size: self.size

        