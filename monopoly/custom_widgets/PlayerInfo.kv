#:import Window kivy.core.window.Window

<PlayerInfo@GridLayout>:
    cols: 2

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: '[b][color=#FF7F00]<Player Name>[/color][/b]'
            font_size: (Window.width**2 + Window.height**2) / 22**4
            markup: True
            size_hint_y: 4

        Label:
            text: '[b][color=#FF7F00]<IP Address>[/color][/b]'
            font_size: (Window.width**2 + Window.height**2) / 22**4
            markup: True
            size_hint_y: 4


    Button:
        text: '[b]<Player Icon>[/b]'

        